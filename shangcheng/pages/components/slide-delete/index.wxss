.wrap {
  position: relative;
  margin: 0 20rpx;
}

.wrap .content {
  position: relative;
  z-index: 1;
  background: #fff;
}

.wrap .content.animate {
  transition: transform 0.3s;
}

.wrap .action-wrap {
  position: absolute;
  display: flex;
  width: 120rpx;
  top: 0;
  bottom: 0;
  right: 0;
}

.wrap .action {
  display: flex;
  width: 120rpx;
  height: 100%;
  justify-content: center;
  align-items: center;
  background: #FF533C;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.wrap .action text {
  font-size: 24rpx;
  color: #fff;
}
