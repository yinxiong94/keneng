.wrap {
  position: relative;
  margin: 20rpx;
}

.wrap .content {
  position: relative;
  z-index: 1;
  background: #fff;
  margin: 10rpx;
}

.wrap .content.animate {
  transition: transform 0.3s;
}

.wrap .action-wrap {
  position: absolute;
  display: flex;
  width: 120rpx;
  top: 0;
  bottom: 0;
  right: 0;
}
.wrap .action-wrap1 {
  position: absolute;
  display: flex;
  width: 120rpx;
  top: 0;
  bottom: 0;
  right: 120rpx;
}

.wrap .action {
  display: flex;
  width: 120rpx;
  height: 143rpx;
  justify-content: center;
  align-items: center;
  background: #eee;
  border-radius: 10rxp;
}

.wrap .action image {
  width: 107rpx;
  height: 107rpx;
  margin-top: 20rpx;
}
