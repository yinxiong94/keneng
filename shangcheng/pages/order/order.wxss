.order {
  width: 710rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 10rpx;
  padding-top: 10rpx;
}

.order .item {
  width: 650rpx;
  margin: 0 auto;
  overflow: hidden;
  padding-top: 30rpx;
}

.order .item .list {
  margin-bottom: 30rpx;
  display: flex;
}

.order .item .list image {
  width: 219rpx;
  height: 219rpx;
}

.order .item .list .right {
  margin-left: 30rpx;
  flex: 1;
  padding-top: 10rpx;
}

.order .item .list .right .right_title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(29, 32, 35, 1);
}

.order .item .list .right .right_Label {
  height: 21rpx;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 18rpx;
  line-height: 21rpx;
}

.order .item .list .right .pirce {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.order .item .list .right .pirce .text_1 {
  height: 28rpx;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 83, 60, 1);
  line-height: 28rpx;
}

.order .item .list .right .pirce .text_1 text {
  font-size: 26rpx;
}

.order .item .list .right .pirce .text_2 {
  height: 22rpx;
  font-size: 28rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(29, 32, 35, 1);
  line-height: 22rpx;
}

.discount {
  width: 650rpx;
  margin: 0 auto;
  display: flex;
  height: 80rpx;
  justify-content: space-between;
  border-bottom: 1px solid #f2f2f2;
}

.discount .send {
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: bold;
  color: rgba(63, 69, 75, 1);
  line-height: 80rpx;
}

.discount .the {
  height: 22rpx;
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 83, 60, 1);
  line-height: 80rpx;
  display: flex;
}

.discount .the image {
  width: 12rpx;
  height: 22rpx;
  margin-top: 30rpx;
  margin-left: 24rpx;
}

.message {
  width: 650rpx;
  margin: 0 auto;
  display: flex;
  height: 95rpx;
}

.message .send {
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: bold;
  color: rgba(63, 69, 75, 1);
  line-height: 80rpx;
}

.message textarea {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: bold;
  color: rgba(63, 69, 75, 1);
  flex: 1;
  height: 70rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
}

.footer {
  height: 98rpx;
  display: flex;
  margin-top: 20rpx;
}

.footer .left {
  width: 374rpx;
  height: 98rpx;
  background-color: #fff;
