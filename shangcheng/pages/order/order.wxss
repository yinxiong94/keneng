  line-height: 98rpx;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(29, 32, 35, 1);
  display: flex;
  box-sizing: border-box;
  justify-content: center;
}

.footer .left  view {
  font-size: 32rpx;
