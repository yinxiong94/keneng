<!-- 请求配送 -->
<view class="db">
  <view class="from">
    <view class="s">
      <view class="left">会员名称：{{UserName}}</view>
    </view>
    <view class="s1">
      <image src='/pages/img/dizhilv.png' lazy-load='true'></image>
      <view class="right">{{Address}}</view>
    </view>
    <view class="s1">
      <image src='/pages/img/tel.png' lazy-load='true'></image>
      <view class="right">{{UserTel}}</view>
    </view>
    <view class="remaining">剩余
      <text>{{CardCount}}</text>次送米
    </view>
    <view class="pirce">
      <view class="pirce_left">
        1份/30斤
      </view>
      <view class="calculation">
        <view class="left" bindtap='jian'>
          <image src='/pages/img/jian.png' lazy-load='true' class="jian"></image>
        </view>
        <view class="conter">{{share}}</view>
        <view class="left" bindtap='jia'>
          <image src='/pages/img/jia1.png' lazy-load='true' class="jia"></image>
        </view>
      </view>
    </view>
  </view>
  <button class="btn" bindtap='handlQqps' disabled="{{isd}}">提交请求</button>
</view>