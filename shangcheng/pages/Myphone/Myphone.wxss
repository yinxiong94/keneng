.db {
  width: 750rpx;
  border-top: 1px solid #EEEEEE;
  /* box-shadow:0px 3px 7px 0px rgba(0, 0, 0, 0.1); */
}

.item {
  width: 690rpx;
  height: 120rpx;
  border-bottom: 1px solid #EEEEEE;
  margin: 0 auto;
  display: flex;
}

.item .left {
  width: 174rpx;
  height: 120rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(29, 32, 35, 1);
  line-height: 120rpx;
}

.item input {
  flex: 1;
  height: 25rpx;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(29, 32, 35, 1);
  margin-top: 34rpx;
}

.item .yzm {
  width: 186rpx;
  height: 70rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(29, 32, 35, 1);
  margin-top: 25rpx;
}
.db .btn {
  width: 690rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin: 0 auto;
  background: rgba(142, 195, 31, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-top: 80rpx;
}


