.db {
  background-color: #efeff4;
}

.top {
  width: 750rpx;
  position: relative;
  height: 180rpx;
}

.top>image {
  width: 750rpx;
  height: 180rpx;
}

.top .wait {
  position: absolute;
  top: 50rpx;
  margin-left: 60rpx;
  height: 36rpx;
  font-size: 38rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
}

.top .wait_time {
  position: absolute;
  top: 105rpx;
  margin-left: 60rpx;
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 25rpx;
  margin-top: 10rpx;
}

.sale {
  width: 750rpx;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  line-height: 100rpx;
  justify-content: space-between;
}

.sale text {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(29, 32, 35, 1);
}

.sale .pirce {
  height: 28rpx;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 83, 60, 1);
  line-height: 28rpx;
  margin-top: 38rpx;
}

.sale .pirce text {
  font-size: 26rpx;
  color: rgba(255, 83, 60, 1);
}

.refund {
  width: 750rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
  overflow: hidden;
}

.refund .refund_title {
  margin-top: 40rpx;
  height: 28rpx;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(29, 32, 35, 1);
  line-height: 28rpx;
}

.refund .refund_coco {
  display: flex;
  height: 130rpx;
  margin-top: 40rpx;
}

.refund .refund_coco>image {
  width: 130rpx;
  height: 130rpx;
}

.refund .refund_coco .right {
  flex: 1;
  margin-left: 20rpx;
  height: 130rpx;
}

.refund .refund_coco .right .right_title {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(29, 32, 35, 1);
  line-height: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.refund .refund_coco .right .right_Wine {
  height: 22rpx;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 22rpx;
  margin-top: 20rpx;
}

.refund .reason {
  height: 26rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(96, 105, 114, 1);
  line-height: 26rpx;
  margin-top: 30rpx;
}

.seller {
  width: 690rpx;
  height: 80rpx;
  background: rgba(142, 195, 31, 1);
  border-radius: 10rpx;
  margin-top: 60rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
