page {
  background-color: #efeff4;
}

.db .top {
  height: 158rpx;
  width: 750rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx 30rpx 30rpx;
  display: flex;
}

.db .top image {
  width: 88rpx;
  height: 88rpx;
}

.db .top .right {
  flex: 1;
  margin-left: 20rpx;
}

.db .top .right .name {
  height: 30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  margin-top: 6rpx;
}

.db .top .right .time {
  height: 27rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 27rpx;
  margin-top: 20rpx;
}

.evaluation {
  width: 750rpx;
  height: 324rpx;
  background-color: #fff;
  overflow: hidden;
}

.evaluation .title {
  height: 32rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Heavy;
  font-weight: 800;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
  text-align: center;
  margin-top: 60rpx;
}

.evaluation .coco {
  width: 532rpx;
  margin: 0 auto;
  margin-top: 57rpx;
  justify-content: space-between;
  display: flex;
}

.evaluation .coco .list {
  width: 77rpx;
  text-align: center;
}

.evaluation .coco .list image {
  width: 77rpx;
  height: 77rpx;
}

.evaluation .coco .list view {
  height: 27rpx;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 27rpx;
  margin-top: 14rpx;
}

.upload {
  width: 750rpx;
  height: 570rpx;
  background-color: #fff;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  overflow: hidden;
}

.upload textarea {
  margin-top: 40rpx;
  height: 310rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 26rpx;
  width: 100%;
}

.upload .upload_img {
  height: 180rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.upload .upload_img .img {
  position: relative;
  margin-right: 33rpx;
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.upload .upload_img .img:nth-child(3n) {
  margin-right: 0;
}

.upload .upload_img .img .img_1 {
  width: 180rpx;
  height: 180rpx;
}

.upload .upload_img .img .img_2 {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: -16rpx;
  top: -16rpx;
}

.btn {
  width: 690rpx;
  height: 80rpx;
  background: rgba(142, 195, 31, 1);
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin: 0 auto;
  margin-top: 50rpx;
}
