<!-- 订单详情 -->
<view class="db">
  <view class="top">
    <image src='/pages/img/bg66.png' lazy-load='true'></image>
    <view class="wait">等待买家付款</view>
    <view class="wait_time">剩余23小时59分自动关闭</view>
  </view>
  <view class="mian">
    <view class="mian_a">
      <image src='/pages/img/dizhi2.png' lazy-load='true'></image>
      <view class="right">
        <view class="name">{{list.TakeName}}
          <text>{{list.Tel}}</text>
        </view>
        <view class="dizhi">{{list.Address}}</view>
      </view>
    </view>
  </view>
  <view class="whole_item">
    <view class="whole">
      <view class="t_2" wx:for="{{list.detailsdlist}}" wx:key="index">
        <view class="t_2_list">
          <image class='coco' src='{{item.goodspic}}' lazy-load='true'></image>
          <view class="right">
            <view class="right_title">{{item.goodsname}}</view>
            <view class="right_size">颜色分类：酒红色；尺码：36</view>
            <view class="right_footer">
              <view class="left">￥{{item.goodsprice}}</view>
              <view class="right">x{{item.goodsnum}}</view>
            </view>
          </view>
        </view>
      </view>
      <view class="t_3_btn" wx:if="{{off}}">
        退款
      </view>
    </view>
    <view class="freight">
      <text>运费：</text>
      <view class="pirce">
        <text>￥</text>0</view>
    </view>
    <view class="freight_1">
      <text>实付款：</text>
      <view class="pirce">
        <text>￥</text>{{list.TotalPrice}}</view>
    </view>
  </view>
  <view class="xinxi">
    <view class="xinxi_title">订单信息</view>
    <view class="ddh">订单号：{{list.OrderNo}}</view>
    <view class="ddh">创建时间：{{list.OrderDate}}</view>
    <view class="ddh">成交时间：{{list.ZhiFuTime == null?'':'list.ZhiFuTime'}}</view>
    <view class="dh">
      <view class="dh_btn">联系卖家</view>
      <view class="dh_btn">拨打电话</view>
    </view>
  </view>
  <view class="biao">猜你喜欢</view>
  <view class="null_item">
    <view class="list">
      <image lazy-load='true' src='/pages/img/list1.png'></image>
      <view class="describe">支妈妈香猪肉系列优选优选猪肉支妈妈香猪肉系列优选优选猪肉支妈妈香猪肉系列优选优选猪肉</view>
      <view class="pirce">
        <view class="left">
          <view class="text_11">￥
            <text>299</text>
          </view>
          <view class="text_22">218人付款</view>
        </view>
        <view class="right">...</view>
      </view>
    </view>
    <view class="list">
      <image lazy-load='true' src='/pages/img/list1.png'></image>
      <view class="describe">支妈妈香猪肉系列优选优选猪肉支妈妈香猪肉系列优选优选猪肉支妈妈香猪肉系列优选优选猪肉</view>
      <view class="pirce">
        <view class="left">
          <view class="text_11">￥
            <text>299</text>
          </view>
          <view class="text_22">218人付款</view>
        </view>
        <view class="right">...</view>
      </view>
    </view>
  </view>
  <view class="send">
    <view class="send_btn">取消订单</view>
    <view class="send_btn_1" bindtap='payment'>付款</view>
  </view>
</view>