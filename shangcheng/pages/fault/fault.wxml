<!-- 故障申报 -->
<view class="db">
  <image lazy-load='true' src='../img/top22.png'></image>
  <view class="top">
    请填写以下信息
  </view>
  <view class="from">
    <view class="list">
      <view class="left">
        机器编码：
      </view>
      <input type='text' placeholder='请在这里输入这台机器编码' bindinput='handMachineId'></input>
      <image src='/pages/img/right.png'></image>
    </view>
    <view class="list">
      <view class="left">
        备注：
      </view>
      <input type='text' placeholder='请在这里输入故障问题' bindinput='handFault'></input>
      <image src='/pages/img/right.png'></image>
    </view>
    <view class='tj' bindtap='handGuzhang'>提交</view>
  </view>
</view>