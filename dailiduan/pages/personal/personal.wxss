.db {
  width: 750rpx;
}

.db .top {
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 750rpx;
  display: flex;
  margin-top: 20rpx;
}

.db .top image {
  width: 120rpx;
  height: 120rpx;
  margin-left: 8rpx;
}

.db .top .name {
  flex: 1;
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 20rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.db .bg {
  width: 690rpx;
  height: 253rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 34rpx;
}

.db .bg image {
  width: 690rpx;
  height: 253rpx;
}

.db .bg .bg_coco {
  width: 690rpx;
  height: 253rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.db .bg .pirce {
  height: 27rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-top: 43rpx;
  margin-left: 24rpx;
}

.db .bg .tixian {
  display: flex;
  height: 51rpx;
  margin-top: 24rpx;
}

.db .bg .tixian .left {
  height: 51rpx;
  font-size: 62rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 51rpx;
  margin-left: 28rpx;
}

.db .bg .tixian .right {
  width: 135rpx;
  height: 51rpx;
  line-height: 51rpx;
  text-align: center;
  background: rgba(255, 255, 255, 1);
  border-radius: 26rpx;
  margin-left: 126rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(116, 168, 9, 1);
}

.db .bg .shou {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  opacity: 0.7;
  display: flex;
  margin-top: 40rpx;
  padding-left: 34rpx;
  box-sizing: border-box;
  height: 36rpx;
  line-height: 36rpx;
}

.db .bg .shou .right {
  margin-left: 16rpx;
  border-left: 1rpx solid #fff;
  padding-left: 16rpx;
}

.db .bg .shou .right:nth-child(1) {
  border-left: 0;
  padding-left: 0;
}

.db .list {
  width: 750rpx;
  height: 442rpx;
  margin-top: 100rpx;
}

.db .list .list_1 {
  width: 750rpx;
  height: 183rpx;
  border-top: 1px solid #f4f5fa;
  display: flex;
}

.db .list .list_1:nth-child(1) {
  border-top: 0;
}

.db .list .list_1 .list_2 {
  width: 248rpx;
  height: 183rpx;
  border-right: 1px solid #f4f5fa;
  text-align: center;
}

.db .list .list_1 .list_2 image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 9rpx;
}

.db .list .list_1 .list_2 .nav_1 {
  height: 23rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 24rpx;
  margin-top: 18rpx;
}
  .tabar {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 98rpx;
  width: 750rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -3px 6px 0px rgba(0, 0, 0, 0.1);
  display: flex;
}

.tabar .nav {
  width: 25%;
  display: flex;
  flex-direction: column;
}

.tabar .nav image {
  width: 42rpx;
  height: 42rpx;
  margin: 0 auto;
  margin-top: 11rpx;
}

.tabar .nav text {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: #aaa;
  height: 23rpx;
  margin-top: 4rpx;
  text-align: center;
}

.lv {
  color: #8ec31f !important;
}